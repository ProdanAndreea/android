<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:weightSum="1"
        android:layout_marginLeft="5dp">


        <TextView
            android:id="@+id/foodDateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="00-00-0000"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_weight="0.40">

            <TextView
                android:id="@+id/foodNameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20dp"
                android:text="Name"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/foodQuantityView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:layout_marginStart="11dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/foodNameView" />

            <TextView
                android:id="@+id/foodGView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="g"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/foodQuantityView"/>

            <TextView
                android:id="@+id/foodTextCalView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="calories: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_alignTop="@+id/foodCalView" />

            <TextView
                android:id="@+id/foodCalView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="0 "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/foodNameView"
                android:layout_toEndOf="@+id/foodTextCalView" />

            <TextView
                android:id="@+id/foodTextCarbView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="carbs: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_alignTop="@+id/foodCarbView" />

            <TextView
                android:id="@+id/foodCarbView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="0 "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/foodCalView"
                android:layout_toEndOf="@+id/foodTextCarbView" />

            <TextView
                android:id="@+id/foodTextProtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="proteins: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_alignTop="@+id/foodProtView" />

            <TextView
                android:id="@+id/foodProtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="0 "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/foodCarbView"
                android:layout_toEndOf="@+id/foodTextProtView" />

            <TextView
                android:id="@+id/foodTextFatView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="fats: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/foodTextProtView"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/foodFatView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foodProtView"
                android:layout_toEndOf="@+id/foodTextFatView"
                android:layout_weight="0"
                android:text="0 "
                android:textAppearance="?android:attr/textAppearanceSmall"/>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>