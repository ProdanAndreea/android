<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.google.firebase.codelab.friendlychat.PersonalData"
    android:layout_marginLeft="10dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Activity"
            android:textSize="23dp" />

        <RadioGroup
            android:id="@+id/radioActivityChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/radioSedentary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Sedentary" />

            <RadioButton
                android:id="@+id/radioRecreational"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recreational athlete" />

            <RadioButton
                android:id="@+id/radioAthlete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Athlete" />

            <RadioButton
                android:id="@+id/radioPowerlifter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powerlifter" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:layout_marginTop="20dp"
        android:text="Goal"/>
    <RadioGroup
        android:id="@+id/radioScopeChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="37dp">

        <RadioButton
            android:id="@+id/radioMantain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mantain Weight"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioLose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lose Weight"/>

        <RadioButton
            android:id="@+id/radioGain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gain Weight"/>
    </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:text="Sex"/>
    <RadioGroup
        android:id="@+id/radioSexChoise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="43dp">

        <RadioButton
            android:id="@+id/radioM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="M"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="F" />
    </RadioGroup>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:layout_marginTop="380dp"
        android:text="Weight(kg)"/>

    <EditText
        android:id="@+id/weightEditText"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="23dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="130dp"
        android:hint="0"/>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="#ffffff"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="130dp"
        android:theme="@style/MyButton"/>




</RelativeLayout>