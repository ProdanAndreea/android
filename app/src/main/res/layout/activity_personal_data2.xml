<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.google.firebase.codelab.friendlychat.PersonalData2"
    android:layout_marginLeft="10dp"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Allergies"
        android:textSize="23dp" />


        <RadioGroup
            android:id="@+id/radioDairyChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp">
            <RadioButton
                android:id="@+id/radioDairy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dairy" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioWheatChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="110dp">
            <RadioButton
                android:id="@+id/radioWheat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wheat" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioSoyChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp">
            <RadioButton
                android:id="@+id/radioSoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soy" />
        </RadioGroup>



    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="#ffffff"
        android:layout_marginLeft="130dp"
        android:theme="@style/MyButton"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/radioWheatChoice"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="60dp" />




</RelativeLayout>